" force you to use jk instead of <esc>
inoremap jk <esc>
inoremap <esc> <nop>

" prevent autoclose 
let g:autoclose_on = 0

" insert mode, map ctrl + u to change the word to UPPERCASE
inoremap <Leader><c-u> <esc>viwUea

" map ev to edit .vimrc.local
nnoremap <leader>ev :vsplit ~/.vimrc.local<CR>

" map sv to source .vimrc.local
nnoremap <Leader>sv :source ~/.vimrc.local<CR>

" slolarized color scheme
set background=dark
colorscheme solarized
set t_Co=16


set so=7
